@media screen and (max-width: 800px)
	body.slideRight
		height: 100vh

	.main-content > div.content.text .table_block_cont table
		width: 100%

	main .main-content > div.content.text .table_block_cont .table_block_cont_col
		overflow-x: auto
		width: 100%


@media screen and (max-width: 660px)

	.fancybox
		&-margin
			margin-right: 0

		&-skin
			border-radius: 0

	.cat-popup
		height: 100vh
		overflow: auto

	main 
		.main-content 
			padding: 20px 0
			h1
				font-size: 2rem

			.content
				margin-top: 20px

	.category-table
		tbody, tr, td
			display: block

	.category-table 
		td
			&:not(:first-child)
				padding: 6px 9px !important

	iframe
		width: 100% !important

@media screen and (max-width: 1000px)

	.msgs__right
		.soc
			a
				&[href*="vk.com"]
					background: url('../img/icp-vk.svg') no-repeat center

				&[href*="instagram.com"]
					background: url('../img/ico-inst.svg') no-repeat center

	.site-version
		display: block !important

	header .top-menu
		display: flex
		padding: 20px !important
		border-bottom: 1px solid var(--main-color)

		.resp-logo__cont, address.phone
			width: 50%
			border: 0
			padding: 0 !important
			margin: 0 !important

		address.phone
			text-align: right

		.btn
			display: none !important

		.burger
			display: none




	main section:not([class='banner'])
		padding: 0

	.categories
		&-new
			display: flex !important
			flex-wrap: wrap !important
			flex-direction: row !important
			padding: 0
			grid-template-columns: repeat(2, 1fr)
			margin-bottom: 0
			grid-gap: 0
			margin-right: -1px

		&__one
			display: flex
			flex-direction: column
			justify-content: space-between
			padding: 35px 27px 33px
			border-bottom: 1px solid var(--main-color)
			width: calc(100% / 2) !important
			border-right: 1px solid var(--main-color)

			&:nth-child(2)
				order: -1
				width: 100% !important

			&:last-child:nth-child(even)
				width: 100% !important

		

			&-top
				flex-direction: column
				align-items: center

			&-title-cont
				display: flex
				flex-direction: column-reverse
				align-items: center

			&-subtitle
				margin-top: 0

				span
					display: none

			&-title
				font-size: 16px
				text-align: center

				i
					font-size: 13px

			&-price
				position: static !important
				font-size: 18px
				color: #A0A0A0

			&-top
				border: 0
				padding: 0 0 30px


			&-mid
				position: absolute
				top: 0
				left: 0
				right: 0
				bottom: 82px

				a
					font-size: 0
					position: absolute
					top: 0
					left: 0
					right: 0
					bottom: 0
					padding: 0
					width: 100%
					-webkit-highlight: none

					&:after
						display: none

			&-bot
				display: flex
				justify-content: center

			&-img-cont
				margin-right: 0
				margin-bottom: 22px

				img
					width: 55px

	.default-btn
		border-radius: 100px

	.instructors, .documents-new, .timetable__cont, .question-answer
		display: none

	.filials
		&:before
			content: 'Филиалы'
			padding-bottom: 27px
			font-size: 22px
			width: 100%
			display: block
			background: var(--main-color)
			color: #fff

	.contacts_col_cont_title
		display: none

	.main 
		.contacts_item_bl
			b
				font-size: 18px
				padding: 25px 55px 25px 22px
				border-bottom: 1px solid #E3E3E3

	.contacts_col_cont_txt-info
		display: none

		div
			padding: 22px !important

	#map	
		display: none !important

	.site-version
		background: #fff
		padding: 10px 23px
		margin: 0 20px 20px


	.contacts_item
		color: #000
		padding-left: 25px
		background: url('../img/ico-location.svg') no-repeat left 0 top 5px


		span
			border: 0

	.cat-popup
		padding: 20px

		.categories__one-mid
			position: static

@media screen and (max-width: 660px)

	header .top-menu address span
		margin-bottom: 6px